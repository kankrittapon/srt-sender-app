<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a2e"
    tools:context=".MainActivity">

    <!-- Camera Preview -->
    <SurfaceView
        android:id="@+id/viewFinder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Top Status Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#CC000000"
        android:padding="12dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Status Indicators -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/statusSrt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SRT ðŸ”´"
                android:textColor="#FF6B6B"
                android:textSize="14sp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/statusFirebase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Firebase ðŸ”´"
                android:textColor="#FF6B6B"
                android:textSize="14sp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/statusGps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GPS ðŸ”´"
                android:textColor="#FF6B6B"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Boat ID Display -->
        <TextView
            android:id="@+id/textBoatId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="---"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginEnd="12dp" />

        <!-- Settings Button -->
        <Button
            android:id="@+id/btnSettings"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="âš™ï¸"
            android:textSize="18sp"
            android:backgroundTint="#555555"
            android:minWidth="48dp"
            android:padding="0dp" />
    </LinearLayout>

    <!-- Status Text -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready"
        android:textColor="#FFFFFF"
        android:background="#80000000"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"/>

    <!-- Bottom Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btnStart"
            android:layout_width="200dp"
            android:layout_height="56dp"
            android:text="â–¶ï¸ Start Stream"
            android:textSize="16sp"
            android:backgroundTint="#4CAF50" />
    </LinearLayout>

    <!-- Hidden fields for legacy compatibility -->
    <EditText
        android:id="@+id/etIp"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="gone"
        android:text="192.168.1.100"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etBoatId"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="gone"
        android:text="boat01"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

